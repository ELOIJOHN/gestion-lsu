# LSU École du Cap - Configuration NPM
# Configuration pour le projet de gestion LSU

# Registre par défaut
registry=https://registry.npmjs.org/

# Configuration de sécurité
audit-level=moderate
fund=false
package-lock=true

# Configuration de développement
save-exact=false
save-prefix=^
save-dev=true

# Configuration de publication
access=public
tag=latest

# Configuration de cache
cache-min=3600
cache-max=infinity

# Configuration de scripts
ignore-scripts=false
ignore-optional=false

# Configuration de dépendances
production=false
only=prod

# Configuration de sécurité supplémentaire
engine-strict=true
legacy-peer-deps=false

# Configuration pour les workspaces
workspaces-update=false

# Configuration pour les audits
audit-level=moderate
fund=false

# Configuration pour les mises à jour
update-notifier=true

# Configuration pour les logs
loglevel=warn
progress=true

# Configuration pour les timeouts
fetch-timeout=300000
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Configuration pour les proxies (si nécessaire)
# proxy=http://proxy.company.com:8080
# https-proxy=http://proxy.company.com:8080

# Configuration pour les certificats (si nécessaire)
# cafile=/path/to/cert.pem
# strict-ssl=true

# Configuration pour les hooks
ignore-prepublish=false
ignore-scripts=false

# Configuration pour les bin
bin-links=true
global-style=false

# Configuration pour les manuels
man=true

# Configuration pour les tests
test-ignore-scripts=false

# Configuration pour les publications
prepublishOnly=false
publishConfig.access=public

# Configuration pour les workspaces
workspaces-concurrency=4

